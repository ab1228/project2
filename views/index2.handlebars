<div class="container u-align-center">
    <h2> Way better than a rental car</h2>
    <p>Book unforgettable cars from trusted hosts around the world</p>

    <!-- Default dropleft button for where -->
    <div class="row">
        <div class="col-3">
            <ul class="nav">
                <li class=" dropdown active span8">
                    <a class="dropdown-toggle" data-toggle="dropdown">
                        <span id="dropdown_title">Choose Car</span>
                    </a>
                    <ul id="carDropDown" class="dropdown-menu">
                        {{#each cars}}
                        {{#if available}}
                        <li><a id="{{this.id}}">{{ this.make }} {{ this.model }}</a></li>
                        {{/if}}
                        {{/each}}
                    </ul>
                </li>
            </ul>
        </div>


        <form>
            <input type="date" id="start-date" value="2017-06-01" />
            <input type="date" id="end-date" />
            <input type="submit" id="submit" />
        </form>
    </div>